#{{{ common

Xft.autohint:		0
Xft.lcdfilter:	lcddefault
Xft.hintstyle:	hintfull
Xft.hinting:		1
Xft.antialias:	1
Xft.rgba:				rgb

*font: -*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*

#}}} common

#{{{ urxvt

# colors
#- cursor
URxvt.cursorColor:	#60c060
URxvt.cursorColor2:	#dcdccc
#- zenburn
URxvt.background:  #303030
URxvt.foreground:  #c0c0c0
#-- black+red
URxvt.color0:      #1E2320
URxvt.color1:      #705050
#-- green+yellow
URxvt.color2:      #60b48a
URxvt.color3:      #dfaf8f
#-- blue+purple
URxvt.color4:      #506070
URxvt.color5:      #dc8cc3
#-- cyan+white
URxvt.color6:      #8cd0d3
URxvt.color7:      #dcdccc
#-- bright-black+bright-red
URxvt.color8:      #709080
URxvt.color9:      #dca3a3
#-- bright-green+bright-yellow
URxvt.color10:     #c3bf9f
URxvt.color11:     #f0dfaf
#-- bright-blue+bright-purple
URxvt.color12:     #94bff3
URxvt.color13:     #ec93d3
#-- bright-cyan+bright-white
URxvt.color14:     #93e0e3
URxvt.color15:     #ffffff
#- scrollbar
URxvt.scrollColor:	#606060

# misc
URxvt.scrollstyle:	plain
URxvt.fading:		30
URxvt.saveLines:	10240
URxvt.cursorBlink:	true

# perl-ext
URxvt.perl-lib: /home/nl/.urxvt/perl/
URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select

#- clipboard
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

#- keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate

#- url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.underlineURLs: true
URxvt.urlLauncher: xdg-open

#}}} urxvt

